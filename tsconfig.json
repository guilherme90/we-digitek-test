{
  "compilerOptions": {
	"module": "commonjs",
	"moduleResolution": "node",
	"esModuleInterop": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"allowSyntheticDefaultImports": true,
	"target": "es2020",
	"sourceMap": true,
	"outDir": "./dist",
	"baseUrl": "./",
	"resolveJsonModule": true,
	"types": ["node", "jest"],
	"paths": {
	  "@/*": ["src/*"]
	}
  },
  "include": [
	"./src/**/*.ts"
  ],
  "exclude": ["./dist/*"]
}
